
@model sait.Models.Request
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Оставьте заявку";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="scripts\form.js">
    <link rel="icon" href="/img/logo.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    
    <title>PODBE.ru - Сайт по подбору персонала</title>
    
</head>
    <header>
        <section class="logo-container">
            <div class="Logo">
            <img src="/img/logo.png" alt="Logotip" width="80px">
        </div>
        <div class="Logo_Text">
            <a href="/Home/Index"><h1>PODBE.ru</h1> </a>
        </div>
        </section>
        <section class="Header_grid">
        <div class="information">
                <a href="/Home/Index"><h4>Главная</h4></a>  
            </div>
         <div class="information">
                <a href="/Home/Index"><h4>О нас</h4></a>
            </div>
         <div class="information">
                <a href="https://support.google.com/"><h4>Поддержка</h4></a>
            </div>
        </section>
        <section class="Right">
            <div style="

        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
        width:60px;
margin-right:10px;
        border-radius: 50% !important;
        padding: 5px !important;
        background: white !important;
        ">
            <img 
                src="/img/avatar_test.png" 
                alt="Avatar" 
                style="
                width: 100% !important;
                height: 100% !important;
                border-radius: 50% !important;
                object-fit: cover !important;
                border: 0.2px solid white !important;
                "
            />
        </div>

                <div style="text-decoration: none; font-family: 'Rubik', sans-serif; font-weight: 800; color:white; margin-right:20px;">
            <a asp-controller="Home" asp-action="Profile" class="user-link" style="text-decoration: none; color: inherit;">
                    <span class="user-name" style="font-family: 'Rubik', sans-serif; font-weight: 800; color: #white; margin-right:20px;">
                    @User.Identity.Name
                </span>
            </a>
        </div>
            <div class="Settings_Button">
            <a href="https://www.youtube.com/watch?v=7ZZK9Iprw5c&list=PL0MUAHwery4ot0KmgGxlBSB7rXssLeA6h&index=15&ab_channel=%D0%90%D0%BB%D0%B5%D0%BA%D1%81%D0%B0%D0%BD%D0%B4%D1%80%D0%9B%D0%B0%D0%BC%D0%BA%D0%BE%D0%B2%E2%80%94FriendlyFrontend"> <img src="/img/Settings.svg" alt="Settings" width="60px"></a>
        </div>
        </section>
    </header>
    <main>
        <h1>ОСТАВЬТЕ ЗАЯКУ</h1>
        
        <div class="Application">
            <h3>Информация о кандидате</h3>
        @if (TempData["SuccessMessage"] != null)
        {
                <div class="alert-success" style="color: #0f5132; background-color: #d1e7dd; padding: 10px; margin: 10px 0; border-radius: 4px;">
                @TempData["SuccessMessage"]


    </div>

        }

        @if (TempData["Error"] != null)
        {
                <div class="alert-success" style="color: #0f5132; background-color: red; padding: 10px; margin: 10px 0; border-radius: 4px;">
                @TempData["Error"]
                </div>
        }
            <form method="post" asp-controller="Home" asp-action = "Check">
                <span asp-validation-for="Post" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Post" , type="text" placeholder="Должность"  >

            <span asp-validation-for="Education_lvl" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <select asp-for="Education_lvl" , onchange="this.setAttribute('data-selected', true)" >
                <option value="null" disabled selected >Образование</option>
                <option value="Не требуется">Не требуется</option>
                <option value="Среднее профессиональное">Среднее профессиональное</option>
                <option value="Высшее">Высшее </option>
            </select>

            <span asp-validation-for="Work_exp" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Work_exp" , type="text" placeholder="Опыт Работы" >

           <span asp-validation-for="Skills" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Skills" , type="text" placeholder="Навыки" >

          <span asp-validation-for="schedule" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <select asp-for="schedule" , onchange="this.setAttribute('data-selected', true)" >
                <option value="1" disabled selected>График Работы</option>
                <option value="2/2">2/2</option>
                <option value="5/2">5/2</option>
                <option value="6/1">6/1</option>
                <option value="Вахта">Вахта</option>
                <option value="Разовая работа">Разовая работа</option>
                <option value="Свободный график">Свободный график</option>
            </select>

            <span asp-validation-for="Age" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Age" , type="text" placeholder="Возраст" >

            <span asp-validation-for="salary" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="salary" , type="text" placeholder="Зарплата" >

            <span asp-validation-for="merit" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="merit" , type="text" placeholder="Личные качества" >
            <h3>Информация о вас</h3>
            <span asp-validation-for="Company_name" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Company_name" type="text" placeholder="Название компании" >
            <span asp-validation-for="Field" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Field" type="text" placeholder="Сфера деятельности" >
            <span asp-validation-for="Adress" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Adress" type="text" placeholder="Юридический адрес" >
            <span asp-validation-for="Name" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Name" type="text" placeholder="Имя" >
            <span asp-validation-for="Surname" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Surname" type="text" placeholder="Фамилия" >
            <span asp-validation-for="PhoneNumber" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="PhoneNumber" type="text" placeholder="Номер Телефона" maxlength="500" >
            <span asp-validation-for="Email" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="Email" type="text" placeholder="Электронная почта" >
            <span asp-validation-for="WorkerPost" 
      style="color: #c90606;
             font-size: 14px;
             margin-top: 5px;
             display: block;
             font-weight: 500;
             padding-left: 5px;">  
                </span>
            <input asp-for="WorkerPost" type="text" placeholder="Занимаемая Должность" >

           
            <a href=""><button type="submit" class="btn">Отправить</button></a>
            </form>
        </div>
        

        

    </main>
